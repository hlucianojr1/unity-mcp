[flake8]
max-line-length = 88
extend-ignore = 
    E203,
    W503,
    E501,
    W291,
    W292,
    W293

exclude = 
    __pycache__,
    build,
    dist,
    .git,
    .mypy_cache,
    .pytest_cache,
    .venv,
    venv,
    ava-worktrees

per-file-ignores =
    __init__.py:F401
    config.py:E501
    test_*.py:E501,F401